#registrationsNew
  - @title = "Sign up"
  = render 'shared/header'

  %h2 Sign Up to use WeightBuddy
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    %ul.rounded
      %li= f.text_field :username, :placeholder => "Username"
      %li= f.text_field :email, :placeholder => "Email Address"
      %li= f.password_field :password, :placeholder => "Password"
      %li= f.password_field :password_confirmation, :placeholder => "Password Confirmation"
    %h2= f.submit "Sign up", :class => "grayButton"
  = render :partial => "devise/shared/links"
